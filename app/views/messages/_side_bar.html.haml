.side-bar
  .user-name
    .user-name__top-items
      %p.user-name__top-items__name
        = current_user.name
      %ul.user-name__top-items__icons
        %li.user-name__top-items__create-group
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon')
        %li.user-name__top-items__edit-account
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .group-list
    - current_user.groups.each do |group|
      .group-list__group
        = link_to group_messages_path(group) do
          .group-list__group__group-name
            = group.name
          .group-list__group__latest-message
            = group.show_last_message